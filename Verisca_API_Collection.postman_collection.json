        {
            "name": "5. Sync Endpoints (TEST THESE)",
            "item": [
                {
                    "name": "Sync Down - Download Claims",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has required fields\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('timestamp');",
                                    "    pm.expect(jsonData).to.have.property('claims');",
                                    "    pm.expect(jsonData).to.have.property('farms');",
                                    "    pm.expect(jsonData).to.have.property('fields');",
                                    "});",
                                    "",
                                    "pm.test(\"Claims array exists\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.claims).to.be.an('array');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/sync/down",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "sync",
                                "down"
                            ]
                        },
                        "description": "Downloads all assigned claims and related farm/field data for offline use.\n\nResponse includes:\n- `claims`: Array of assigned claims\n- `farms`: Related farm data\n- `fields`: Related field data\n- `timestamp`: Server timestamp"
                    }
                },
                {
                    "name": "Sync Down - Incremental (with last_sync)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/sync/down?last_sync=2025-12-06T10:00:00",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "sync",
                                "down"
                            ],
                            "query": [
                                {
                                    "key": "last_sync",
                                    "value": "2025-12-06T10:00:00",
                                    "description": "ISO timestamp - only returns data updated after this time"
                                }
                            ]
                        },
                        "description": "Incremental sync - only downloads data modified since the last sync timestamp.\n\nChange the `last_sync` parameter to test different scenarios."
                    }
